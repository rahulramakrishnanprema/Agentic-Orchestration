# Dockerfile for Frontend Only (Nginx serving React)
FROM node:20-alpine AS builder

WORKDIR /app

# Copy frontend files
COPY Agentic_UI/package*.json ./
RUN npm ci

COPY Agentic_UI/src ./src
COPY Agentic_UI/.env.* ./
COPY Agentic_UI/*.config.* ./
COPY Agentic_UI/*.config.ts ./
COPY Agentic_UI/*.json ./
COPY Agentic_UI/*.js ./
COPY Agentic_UI/index.html ./

# Build frontend
RUN npm run build

# Stage 2: Serve with Nginx
FROM nginx:alpine

# Copy built files to nginx
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy nginx config from deployment folder
COPY deployment/nginx.conf /etc/nginx/nginx.conf

EXPOSE 8080

CMD ["nginx", "-g", "daemon off;"]

